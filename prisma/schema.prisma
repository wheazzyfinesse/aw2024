generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String
  password  String
  image     String
  createdAt DateTime  @default(now())
  posts     Post[]
  gifts     Gift[]
  messages  Message[]
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl  String
  isPublic  Boolean  @default(true)
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model Gift {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  message   String
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])
}
